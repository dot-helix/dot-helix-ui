{
  "name": "@dot-helix/ui",
  "version": "1.0.0-canary.0",
  "description": "An accessibility-first React component library for building modern websites and applications.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "ui",
    "component library",
    "ui library",
    "accessibility-first"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:dot-helix/dot-helix-ui.git"
  },
  "scripts": {
    "dev": "next dev",
    "prod": "next build && next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --project tsconfig.lint.json && eslint \"**/*.{ts,tsx}\" --config .eslintrc",
    "clear": "rimraf dist",
    "prebuild": "npm-run-all clear lint test",
    "build": "npm-run-all build:transpile build:minify build:package",
    "build:transpile": "npm-run-all build:transpile:cjs build:transpile:esm",
    "build:transpile:cjs": "tsc -p tsconfig.cjs.json",
    "build:transpile:esm": "tsc -p tsconfig.esm.json",
    "build:package": "tsx scripts/build-package.ts",
    "build:minify": "tsx scripts/minify-package.ts"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.3.2",
    "next": "^14.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "terser": "^5.30.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "@styleless-ui/react": "1.0.0-rc.0",
    "classnames": "^2.5.1",
    "react-design-tokens": "2.0.0-rc.2"
  },
  "packageManager": "pnpm@8.15.7+sha256.50783dd0fa303852de2dd1557cd4b9f07cb5b018154a6e76d0f40635d6cee019"
}
